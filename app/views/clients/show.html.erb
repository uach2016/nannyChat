<p id="notice"><%= notice %></p>
<div class="container col-md-3"
	<p>
	  <strong>Name:</strong>
	  <%= @client.name %>
	</p>

	<p>
	  <strong>Phone:</strong>
	  <%= @client.phone %>
	</p>

	<p>
	  <strong>Address:</strong>
	  <%= @client.address %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @client.description %>
	</p>

</div>
<div class="container-fluid">
	<div class="panel-group col-md-10" style="position:absolute; bottom:0px">
	  <div class="panel panel-default">
	   	<%= link_to 'Edit', edit_client_path(@client)%>

		<%= link_to 'Destroy', @client, method: :delete, data: { confirm: 'Are you sure?' }, :style => 'float: right' %>
	  </div>
	</div>
</div>
</div>

